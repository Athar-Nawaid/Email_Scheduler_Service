generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Campaign {
  id          Int      @id @default(autoincrement())
  userId      Int
  startTime   DateTime
  delayMs     Int
  hourlyLimit Int
  createdAt   DateTime @default(now())
}

model Email {
  id           Int      @id @default(autoincrement())
  campaignId   Int
  to           String
  subject      String
  body         String
  status       String
  scheduledAt  DateTime
  sentAt       DateTime?
  error        String?
  jobId        String?
  createdAt    DateTime @default(now())
}
